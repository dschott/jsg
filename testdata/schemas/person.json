{
    "$id": "https://www.example.com/schemas/person.json",
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "properties": {
        "firstName": {
            "type": "string"
        },
        "lastName": {
            "type": "string"
        },
        "pets": {
            "type": "array",
            "items": {
                "$ref": "/schemas/pet.json"
            }
        }
    },
    "required": [
        "firstName",
        "lastName"
    ]
}
